{
    "name": "illuminated/helper-functions",
    "description": "Laravel-specific and pure PHP helper functions.",
    "keywords": ["laravel", "helper", "function"],
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Ivanov",
            "email": "dmitry.g.ivanov@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "illuminate/support": "5.7.*",
        "nesbot/carbon": "^1.26",
        "symfony/filesystem": "^4.1",
        "symfony/finder": "^4.1",
        "symfony/process": "^4.1",
        "symfony/var-dumper": "^4.1",
        "spatie/array-to-xml": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "mockery/mockery": "^1.0",
        "illuminated/testing-tools": "5.7.*"
    },
    "autoload": {
        "files": ["src/autoload.php"],
        "psr-4": {
            "Illuminated\\Helpers\\": "src/classes/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/HelperFunctions/TestCase.php"
        ]
    }
}
