{
    "name": "illuminated/helper-functions",
    "description": "Provides Laravel-specific and pure PHP helper functions.",
    "keywords": ["laravel", "helper", "function"],
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Ivanov",
            "email": "dmitry.g.ivanov@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "illuminate/support": "5.5.*",
        "nesbot/carbon": "^1.20",
        "symfony/filesystem": "^3.3",
        "symfony/finder": "^3.3",
        "symfony/process": "^3.3",
        "symfony/var-dumper": "^3.3",
        "spatie/array-to-xml": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "mockery/mockery": "^0.9",
        "illuminated/testing-tools": "^0.6"
    },
    "autoload": {
        "files": ["src/autoload.php"],
        "psr-4": {
            "Illuminated\\Helpers\\": "src/classes/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/HelperFunctions/TestCase.php"
        ]
    }
}
